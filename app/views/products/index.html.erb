<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <%= image_tag(product.image_url, class: "img-responsive") %>
        <h2><%= product.name %></h2>
        <p><%= product.description %></p>
        <p>Colour: <%= product.colour %></p>
        <p><strong>$<%= product.price %></strong></p>
        <p class="links"><%= link_to 'Show', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div><!-- /col -->
    <% end %>
  </div><!-- /row -->
</div><!-- /container -->

<br>

<div class="create">
  <%= link_to 'New Product', new_product_path %>
</div>
