<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th class="sixth">Name</th>
      <th class="sixth">Description</th>
      <th class="sixth">Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="sixth"><%= product.name %></td>
        <td class="sixth"><%= product.description %></td>
        <td class="sixth"><%= product.image_url %></td>
        <td class="sixth"><%= link_to 'Show', product %></td>
        <td class="sixth"><%= link_to 'Edit', edit_product_path(product) %></td>
        <td class="sixth"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="create">
  <%= link_to 'New Product', new_product_path %>
</div>
