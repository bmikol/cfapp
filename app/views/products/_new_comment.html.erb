<% if signed_in? %>
<div class="row add-review">
  <div class="col-md-12 col-sm-12">
		<h4>Add a Review!</h4>
		<%= form_for([@product, @product.comments.build]) do |f| %>
			<div class="col-md-8 col-sm-12">
		 		<div class="form-group">
					<%= f.label :body, "Comments" %>
					<%= f.text_area :body, id: "comment-area" %>
				</div><!-- /form-group -->
			</div><!-- /col-md-8 -->
			<div class="col-md-2 col-sm-12">
		  	<div class="form-group">
					<label for="rating">Rating</label>
					<div class="rating"></div>
				</div><!-- /form-group -->
		  </div><!-- /col-md-2 -->
			<div class="col-md-2 col-sm-12 subarea">
		  	<%= submit_tag("Submit", class: "btn btn-default submit") %>
		  </div><!-- /col-md-2 -->
		<% end %>
	</div><!-- /col-md-12 -->
</div><!-- /row -->

<% end %>